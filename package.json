{
  "name": "@lab5e/toolbox",
  "version": "0.1.4",
  "description": "A little toolbox containing several utility functions",
  "repository": "lab5e/toolbox",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/toolbox.umd.production.min.js",
  "module": "dist/toolbox.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src/index.ts",
    "src/sleep.ts",
    "src/copy.ts",
    "src/clone.ts",
    "src/validation.ts",
    "src/vue/dialogMixin.ts",
    "src/vue/eventBus.ts",
    "src/vue/vueMixin.ts",
    "src/vuetify/ConfirmDialog.vue",
    "src/vuetify/dialog.ts"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format cjs,esm,umd --name toolbox -i src/index.ts",
    "test": "tsdx lint src && tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "doc": "typedoc --out docs src/index.ts --exclude \"**/*.spec.ts\" --readme DOC.md",
    "lint": "tsdx lint",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "keywords": [
    "lab5e",
    "utility"
  ],
  "author": "Per Kristian Kummermo",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@jest/console": "^27.3.1",
    "@jest/test-result": "^27.3.1",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@vue/compiler-sfc": "^3.2.20",
    "babel-core": "^7.0.0-bridge.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "node-sass": "^6.0.1",
    "np": "^7.5.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-vue": "^5.0.0",
    "size-limit": "^6.0.3",
    "ts-jest": "^26.5.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4",
    "vue": "^2.6.14",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.14",
    "vuetify": "^2.5.10"
  },
  "size-limit": [
    {
      "path": "dist/toolbox.cjs.production.min.js",
      "limit": "7 kB"
    },
    {
      "path": "dist/toolbox.esm.js",
      "limit": "7 kB"
    },
    {
      "path": "dist/toolbox.umd.production.min.js",
      "limit": "7 kB"
    }
  ],
  "peerDependencies": {
    "vue": "^2.0.0",
    "vuetify": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "vuetify": {
      "optional": true
    }
  }
}
