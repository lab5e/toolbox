{
  "name": "@lab5e/toolbox",
  "version": "0.1.8",
  "description": "A little toolbox containing several utility functions",
  "repository": "lab5e/toolbox",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/toolbox.js",
  "browser": "dist/toolbox.esm.js",
  "module": "dist/toolbox.esm.js",
  "unpkg": "dist/toolbox.min.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c && tsc",
    "build-esbuild": "npm run clean && npm run build-browser && npm run build-ts",
    "build-ts": "tsc -p esbuild.tsconfig.json",
    "build-browser": "node build.js",
    "test": "eslint && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "doc": "typedoc --out docs src/index.ts --exclude \"**/*.spec.ts\" --readme DOC.md",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "keywords": [
    "lab5e",
    "utility"
  ],
  "author": "Per Kristian Kummermo",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-plugin-vue": "^8.0.1",
    "eslint-plugin-vuetify": "^1.1.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "np": "^7.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^5.1.9",
    "size-limit": "^6.0.3",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4",
    "vue": "^2.6.14",
    "vue-jest": "^3.0.7",
    "vuetify": "^2.5.0"
  },
  "size-limit": [
    {
      "path": "dist/toolbox.cjs.production.min.js",
      "limit": "7 kB"
    },
    {
      "path": "dist/toolbox.esm.js",
      "limit": "7 kB"
    }
  ],
  "peerDependencies": {
    "vue": "^2.0.0",
    "vuetify": "^2.5.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "vuetify": {
      "optional": true
    }
  }
}
